<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screen_white_2"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".Fragment.VehicleFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="11dp">

       <EditText
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:drawableStart="@drawable/vector"
           android:hint="Search for driver/vehicle"
           android:background="@null"
           android:layout_marginTop="10dp"
           android:layout_margin="10dp"
           android:drawablePadding="10dp"
           android:layout_marginBottom="10dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vehicle_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        tools:listitem="@layout/vehicle_list" />


</LinearLayout>