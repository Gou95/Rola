<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_white_2"
    tools:context=".Activity.ProfileActivity"

    >


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"

        >

                    <ImageButton
                        android:id="@+id/imgBtn_arrowBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/tran"
                        android:src="@drawable/ic_back_2" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:text="Profile"
            android:layout_marginStart="20dp"
            android:textColor="@color/light_bl"
            android:textSize="24sp" />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="General"
        android:fontFamily="@font/helvetica_regular"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textColor="@color/light_white"
        android:layout_marginHorizontal="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="20dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/langauge" />



        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Langauge"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cardview"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/helvetica_regular"
            android:textColor="@color/light_bl"
            android:textSize="15sp"/>




        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/helvetica_regular"
            android:textColor="@color/light_white"
            android:textSize="15sp"/>



        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow"
            android:background="@color/tran"

            />





    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:background="@color/light_whitte_1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="20dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/currency" />


        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Currency"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cardview1"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/helvetica_regular"
            android:textColor="@color/light_bl"
            android:textSize="15sp"/>




        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dollar"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/helvetica_regular"
            android:textColor="@color/light_white"
            android:textSize="15sp"/>



        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow"
            android:background="@color/tran"

            />





    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:background="@color/light_whitte_1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="20dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/contact"
                android:layout_gravity="center"/>



        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cardview2"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/helvetica_regular"
            android:textColor="@color/light_bl"
            android:textSize="15sp"/>





        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow"
            android:background="@color/tran"
            />





    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:background="@color/light_whitte_1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Security"
        android:fontFamily="@font/helvetica_regular"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:textColor="@color/light_white"
        android:layout_marginHorizontal="10dp"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="20dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/changepassword"
                android:layout_gravity="center"/>



        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cardview3"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/helvetica_regular"
            android:textColor="@color/light_bl"
            android:textSize="15sp"/>





        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow"
            android:background="@color/tran"
            />





    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:background="@color/light_whitte_1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="20dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/privacy"
                android:layout_gravity="center"/>



        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/cardview4"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/helvetica_regular"
            android:textColor="@color/light_bl"
            android:textSize="15sp"/>





        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/arrow"
            android:background="@color/tran"
            />





    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1.5dp"
        android:background="@color/light_whitte_1"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"/>
</LinearLayout>